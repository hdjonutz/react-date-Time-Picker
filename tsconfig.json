{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    // "commonjs"
    "allowSyntheticDefaultImports": true, // react has no default exporter
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/typings"
  ],
  //"types" : ["material-ui", "react"],
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ]
}
